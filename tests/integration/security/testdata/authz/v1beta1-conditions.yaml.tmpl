    - key: source.ip
      notValues: {{ toJson .ipB }}
---

apiVersion: security.istio.io/v1beta1
kind: AuthorizationPolicy
metadata:
  name: condition-source-namespace
  namespace: "{{ .NamespaceC }}"
spec:
  selector:
