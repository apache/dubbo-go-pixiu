  - to:
    - operation:
        paths: ["/source-namespace-{{ .b }}"]
    when:
    - key: source.namespace
      values: ["{{ .NamespaceB }}"]
---

apiVersion: security.istio.io/v1beta1
kind: AuthorizationPolicy
metadata:
  name: condition-source-namespace-notvalues
